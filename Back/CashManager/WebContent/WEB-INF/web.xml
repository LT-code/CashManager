<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" version="3.1">
  <display-name>CashManager</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
  
  <context-param>
    <param-name>dbconfig</param-name>
    <param-value>
        /META-INF/conf/dbconfig.properties
    </param-value>
  </context-param>
  
  <context-param>
    <param-name>dbconfigProd</param-name>
    <param-value>
        /META-INF/conf/prod.dbconfig.properties
    </param-value>
  </context-param>
  
  <context-param>
    <param-name>dbconfigLocal</param-name>
    <param-value>
        /META-INF/conf/local.dbconfig.properties
    </param-value>
  </context-param>
  
  <listener>
    <listener-class>utils.InitServer</listener-class>
  </listener>
</web-app>